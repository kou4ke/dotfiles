{
  "title": "Alacritty settings",
  "rules": [
    {
      "description": "pagedown key to launch alacritty",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "simultaneous": [
              { "key_code": "page_down" }
            ],
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [
            { "shell_command": "open -a 'Alacritty.app'" }
          ]
        }
      ]
    }
  ]
}
